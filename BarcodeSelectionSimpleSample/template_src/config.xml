<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scandit.barcodeselectionsimplesample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BCSimple</name>
    <description>BarcodeSelectionSimpleSample for the Scandit Cordova plugin</description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="android-compileSdkVersion" value="33" />
        <preference name="GradlePluginKotlinEnabled" value="true" />
        <preference name="GradlePluginKotlinVersion" value="1.8.20" />
         <preference name="GradleVersion" value="8.8" />
        <preference name="AndroidGradlePluginVersion" value="8.5.1" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="SwiftVersion" value="5" />
        <preference name="deployment-target" value="14.0"/>
    </platform>
</widget>
